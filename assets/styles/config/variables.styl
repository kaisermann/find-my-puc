/* Main */
_base-font-size 					= 10px
_site-width 						= 1140px

/* Bower overrides */
rolleiflex.baseFontSize 			= _base-font-size
rolleiflex.use.rem 					= true
rolleiflex.build.declarative 		= true
rolleiflex.breakpoints.lg.container = _site-width

bp = rolleiflex.breakpoints
rupture.base-font-size 				= _base-font-size
rupture.scale 						= 0 (bp.sm.breakpoint) (bp.md.breakpoint) (bp.lg.breakpoint)
rupture.scale-names 				= keys(rolleiflex.breakpoints)
rupture.anti-overlap 				= true
rupture.enable-em-breakpoints 		= false
rupture.mobile-cutoff 				= bp.sm.breakpoint
rupture.tablet-cutoff 				= bp.md.breakpoint
rupture.desktop-cutoff 				= bp.md.breakpoint
/* End Bower */

/* Colors */

colors = {
	"pink": #850047,
	"purple": #93648D,
	"green": #7BC8A4,
	"blue": #4CC3D9,
	"yellow": #FFC65D,
	"red": #F16745,
	"brown": #664F36,
	"white": whitesmoke,
	"gray": #404040,
	"black": #353B42,
}

// Light, dark, saturated and desaturated colors. From index [0] to [8]
for colorName, hex in colors
	colors['lighten-'+colorName] = ()
	colors['darken-'+colorName] = ()
	colors['desaturate-'+colorName] = ()
	colors['saturate-'+colorName] = ()
	for i in (1..9)
		push(colors['lighten-'+colorName], lighten(hex, unit(i * 10, '%')))
		push(colors['darken-'+colorName], darken(hex, unit(i * 10, '%')))
		push(colors['desaturate-'+colorName], desaturate(hex, unit(i * 10, '%')))
		push(colors['saturate-'+colorName], saturate(hex, unit(i * 10, '%')))
	
	{'darken-'+colorName}
		foo: colors['lighten-'+colorName]
		foo: colors['darken-'+colorName]
		foo: colors['desaturate-'+colorName]
		foo: colors['saturate-'+colorName]

