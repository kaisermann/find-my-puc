/* Main */
_base-font-size 					= 16px
_site-width 						= 1140px

/* Bower overrides */
rolleiflex.baseFontSize 			= _base-font-size
rolleiflex.use.rem 					= true
rolleiflex.build.declarative 		= true
rolleiflex.breakpoints.lg.container = _site-width

bp = rolleiflex.breakpoints
rupture.base-font-size 				= _base-font-size
rupture.scale 						= 0 (bp.sm.breakpoint) (bp.md.breakpoint) (bp.lg.breakpoint)
rupture.scale-names 				= keys(rolleiflex.breakpoints)
rupture.anti-overlap 				= true
rupture.enable-em-breakpoints 		= false
rupture.mobile-cutoff 				= bp.sm.breakpoint
rupture.tablet-cutoff 				= bp.md.breakpoint
rupture.desktop-cutoff 				= bp.md.breakpoint
