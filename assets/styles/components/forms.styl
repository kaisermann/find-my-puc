.form-control
	min-height 3.6rem
	padding 1.0rem
	font-size 1.8rem
	
	&--radio
		position relative
		padding 0
		
		input[type=checkbox]
			display none
			
			&:checked ~ label
				&::before
					background-color: colors.darken-blue[1]
					outline-color: colors.white

			
		label
			cursor pointer
			display inline-block
			transition transform .3s ease
			
			&:active
				transform scale(1.1)
				
			&::before
				content ''
				display inline-block
				vertical-align middle
				size(1.8rem)
				background-color: colors.white
				border: 2px solid colors.darken-blue[1]
				margin-right 1rem
				outline .3rem solid transparent
				outline-offset -.5rem
				transition background-color .3s ease, outline-color .3s ease