.contact-form
	max-width 70rem
	margin-left auto
	margin-right auto

.form
	&__control
		font-family Monospace, sans-serif
		min-height 3.6rem
		padding 1.0rem 2rem
		font-size 1.8rem
		width 100%
		
		&--radio
			position relative
			padding 0
			
			input[type=checkbox]
				display none
				
				&:checked ~ label
					&::before
						background-color: colors.darken-blue[1]
						outline-color: colors.white

				
			label
				cursor pointer
				display inline-block
				transition transform .3s ease
				
				&:active
					transform scale(1.1)
					
				&::before
					content ''
					display inline-block
					vertical-align middle
					size(1.8rem)
					background-color: colors.white
					border: 2px solid colors.darken-blue[1]
					margin-right 1rem
					outline .3rem solid transparent
					outline-offset -.5rem
					transition background-color .3s ease, outline-color .3s ease
		&--submit
			padding 2rem
			
		&--border
			border none
			border-left: .5rem solid colors.darken-blue[2]
			
		&--padded
			padding-left 4rem
			
	&__item
		position relative
		margin-bottom 1.5rem
		
		
textarea.form__control
	min-height 18rem
	resize none